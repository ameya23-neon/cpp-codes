#include<iostream>
using namespace std;
int main()
{
	float hats, heads;

	cout.setf(ios_base::fixed, ios_base::floatfield);
	cout << "Enter a number ";
	cin >> hats;
	cout << "Enter another number";
	cin >> heads;
	cout << "Hats= " << hats;
	cout << "Heads= " << heads;
	cout << endl;
	cout << "hats+heads= " << hats + heads << endl;
	cout << "hats-heads= " << hats - heads << endl;
	cout << "hats*heads= " << hats * heads << endl;
	cout << "hats/heads= " << hats / heads << endl;
	return 0;

}
